<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/black"
    android:orientation="vertical">
    <View
        android:id="@+id/progress_overlay"
        android:layout_width="0dp"
        android:layout_below="@id/frameBackdrop"
        android:layout_height="10dp"
        android:background="@color/blue"
        android:visibility="visible" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/frameBackdrop">
        <ImageView
            android:id="@+id/movieBackdrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/dummyposter" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/gradient_top_bottom_bg" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/movieLogo"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:src="@drawable/dummyposter"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/imageButtonContainer"
        android:layout_below="@id/progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_900"

        >

        <ImageButton
            android:tooltipText="Favorit"
            android:id="@+id/addToListButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_toLeftOf="@id/downloadButton"
            android:backgroundTint="@color/transparent"
            android:focusable="true"
            android:nextFocusRight="@id/downloadButton"
            android:nextFocusDown="@id/downloadButton"
            android:scaleType="centerInside"
            android:background="@drawable/play_shape"
            android:src="@drawable/ic_add"
            />



        <ImageButton
            android:id="@+id/downloadButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/fakebutton"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/download_button_bg_color"
            android:nextFocusLeft="@id/addToListButton"
            android:nextFocusRight="@id/changeSourceButton"
            android:nextFocusUp="@id/addToListButton"
            android:nextFocusDown="@id/changeSourceButton"
            android:scaleType="centerInside"
            android:src="@drawable/ic_download"
            />

        <TextView
            android:id="@+id/fakebutton"
            style="@style/sizelabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/jost_medium"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Kung Panda THE LEGEND OF AANG"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            />

        <ImageButton
            android:id="@+id/changeSourceButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/fakebutton"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/downloadButton"
            android:nextFocusUp="@id/downloadButton"
            android:nextFocusRight="@id/shareButton"
            android:nextFocusDown="@id/shareButton"
            android:scaleType="centerInside"
            android:backgroundTint="@color/download_button_bg_color"
            android:src="@drawable/ic_settings"
            />



        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/changeSourceButton"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/changeSourceButton"
            android:nextFocusUp="@id/changeSourceButton"
            android:scaleType="centerInside"
            android:backgroundTint="@color/download_button_bg_color"
            android:src="@drawable/ic_share_24"
            />


        <!--                    android:background="@drawable/tab_bg_color"-->


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageButton
            android:id="@+id/play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/play_shape"
            android:backgroundTint="@color/download_button_bg_color"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/jost_regular"
            android:orientation="horizontal"
            android:src="@drawable/ic_play"
            app:cornerRadius="100dp" />
        
        
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageButtonContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Add this TextView for the countdown -->


            <RelativeLayout
                android:id="@+id/relativeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/judulOriginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/namaMovie"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/jost_medium"
                        android:paddingHorizontal="20dp"
                        android:textColor="#CCCCCC"
                        android:textSize="20sp"
                        android:text="Title Movie"
                        android:visibility="gone"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/labels"
                    android:layout_below="@id/judulOriginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_horizontal">


                    <TextView
                        android:id="@+id/ratingsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:fontFamily="@font/jost_regular"
                        android:textAlignment="viewStart"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/ratings"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="8.6" />

                    <ImageView
                        android:id="@+id/dot"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toEndOf="@id/ratingsText"
                        android:src="@drawable/oval" />

                    <TextView
                        android:id="@+id/year_text"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/dot"
                        android:fontFamily="@font/jost_regular"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:text="2099" />


                    <ImageView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toEndOf="@id/year_text"
                        android:src="@drawable/oval" />

                    <TextView
                        android:id="@+id/RuntimeText"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/dot2"
                        android:fontFamily="@font/jost_regular"
                        android:text="1h 30m"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ratings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start|center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tmdb"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ratingsLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labels"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/GenresText"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/jost_regular"
                        android:gravity="start"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text="Action, Adventure, Fantasy"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sizeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingsLabels"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/sizeTextInFileItem1"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/jost_medium"
                        android:paddingHorizontal="20dp"
                        android:text="955mb"
                        android:textColor="#CCCCCC"
                        android:textSize="15sp"
                        android:visibility="gone" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sizeLabel"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title3"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_medium"
                        android:textColor="#CCCCCC"
                        android:textSize="20sp"
                        android:text="Nama Movie"
                        android:visibility="visible"
                        />

                    <TextView
                        android:id="@+id/overviewtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_medium"
                        android:text="@string/overview"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone">

                    </TextView>

                    <TextView
                        android:id="@+id/overviewdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/jost_regular"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:text="In the 22nd century, a paraplegic Marine is dispatched to the moon Pandora on a unique mission, but becomes torn between following orders and protecting an alien civilization." />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BE1E2D"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/saweria"
                            android:src="@drawable/cendol"/>
                        <Button
                            android:id="@+id/saweria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_medium"
                            android:text="Donate a Cendol here"
                            android:background="@color/transparent"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:textSize="18sp"
                            android:visibility="visible"/>
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerEpisodes2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="80dp"
                        android:scrollbars="vertical"
                        android:visibility="visible"
                        tools:itemCount="5"
                        tools:listitem="@layout/more_item" />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>